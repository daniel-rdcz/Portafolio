---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import AbMePro from '../components/aboutMe&Projects.astro';
import Contact from '../components/contact.astro';
import Main from '../components/main.astro';
import Buttons from '../components/buttons.astro';
---

<Layout title="Portafolio">
    <div>
        <main class="flex h-screen w-screen justify-center">
            <div class="bg-gray-500 m-10 flex flex-wrap text-center wrapper">
                <div class="header">
                    <Header/>
                </div>
                <div class="aboutMeProjects">
                    <AbMePro/>
                </div>
                <div class="main">
                    <Main/>
                </div>
                <div class="contact">
                    <Contact/>
                </div>
                <div class="buttons">
                    <Buttons/>
            </div>
        </main>
    </div>
</Layout>

<style>
    :global(.wrapper) {
        display: grid;
        grid-template-columns: 2fr 3fr 1fr;
        grid-template-rows: 5fr 3fr 5fr;
        gap: 10px;
        width: 100%;
        max-width: 1200px;
        grid-template-areas:
            "header header header"
            "aboutMeProjects contact contact"
            "aboutMeProjects main buttons";
    }

    .header {
        grid-area: header;
        background-color: #4A4A4A;
    }

    .aboutMeProjects {
        grid-area: aboutMeProjects;
        background-color: #5A5A5A;
    }

    .main {
        grid-area: main;
        background-color: #6A6A6A;
    }

    .buttons {
        grid-area: buttons;
        background-color: #7A7A7A;
    }

    .contact {
        grid-area: contact;
        background-color: #8A8A8A;
    }

    @media all and (max-width: 768px) {
        :global(.wrapper) {
            grid-template-columns: 1fr;
            grid-template-rows: auto auto auto auto auto;
            grid-template-areas:
                "header"
                "aboutMeProjects"
                "main"
                "buttons"
                "contact";
        }
    }
</style>
