---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import AbMePro from '../components/aboutMe&Projects.astro';
import Contact from '../components/contact.astro';
import Main from '../components/main.astro';
import Buttons from '../components/buttons.astro';
---

<Layout title="Portafolio">
    <main class="flex h-screen w-screen justify-center">
        <div class=" m-10 flex flex-wrap text-center wrapper" id="wrapper">
            <Header/>
            <AbMePro/>
            <Main/>
            <Contact/>
            <Buttons/>
        </div>
    </main>
</Layout>

<script src="https://unpkg.com/animate-css-grid@1.3.0"></script>
<script src="../scripts/gridAnimation"></script>

<style>
    :global(.wrapper) {
        display: grid;
        grid-template-columns: 2fr 3fr 1fr;
        grid-template-rows: 5fr 3fr 5fr;
        gap: 10px;
        width: 100%;
        max-width: 1200px;
        grid-template-areas:
            "header header header"
            "aboutMeProjects contact contact"
            "aboutMeProjects main buttons";
    }

    :global(.wrapper.small-screen) {
        grid-template-columns: 1fr;
        grid-template-rows: auto auto auto auto auto;
        grid-template-areas:
            "header"
            "aboutMeProjects"
            "main"
            "buttons"
            "contact";
    }
</style>
